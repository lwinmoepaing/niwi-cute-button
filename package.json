{
  "name": "@niw!/cute-button",
  "private": true,
  "scripts": {
    "commit": "cz",
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:core": "turbo dev --filter='@niw!/cute-button'",
    "lint:core": "turbo lint --filter='@niw!/cute-button'",
    "build:core": "turbo build --filter='@niw!/cute-button'",
    "dev:react": "turbo dev --filter='@niw!/cute-button-react' --filter='@niw!/docs'",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build --filter=docs^... && changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "commitizen": "^4.3.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.5",
    "prettier": "^3.2.5",
    "turbo": "^2.0.14"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
